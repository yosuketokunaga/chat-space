.chat
  .chat-side
    .chat-side__user
      %h5= current_user.name
      =link_to edit_user_registration_path do
        = fa_icon 'cog'
      =link_to new_group_path do
        = fa_icon 'pencil-square-o'
    .chat-side__groups
      = render partial: "layouts/group"
  .chat-main
    .chat-main__header
      = render partial: 'header', locals:{ group: @group }
    .chat-main__body
      = render @messages
    .chat-main__footer
      .chat-main__footer__block
        = form_for ([@group,@message]) do |f|
          = f.text_field :body, placeholder: "type a text", class: "chat-main__footer__block__left"
          = button_tag type: 'submit', class: "chat-main__footer__image" do
            %i.fa.fa-image
          = f.submit "Send", class: "chat-main__footer__block__right"
