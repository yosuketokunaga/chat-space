.chat
  .chat-side
    .chat-side__user
      %h5= current_user.name
      =link_to edit_user_registration_path do
        = fa_icon 'cog'
      =link_to new_group_path do
        = fa_icon 'pencil-square-o'
    .chat-side__groups
      = render partial: "layouts/group"
  .chat-main
    .chat-main__header
      = render partial: 'header', locals:{ group: @group }
    .chat-main__body
      .chat-main__body__messages
        = render @messages

  .chat-footer
    = form_for [@group, @message] do |f|
      .chat-footer__body
        = f.text_area :body, row: 1, placeholder: 'type a message'
        %label.chat-footer__file
          = f.file_field :image
          %i.fa.fa-image
      = f.submit 'Send'
