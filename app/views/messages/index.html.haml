.chat
  .chat__side
    .chat__side--user
      %h5= current_user.name
      =link_to edit_user_registration_path do
        = fa_icon 'cog'
      =link_to new_group_path do
        = fa_icon 'pencil-square-o'
    %ul.chat__side--groups
      %li.chat__side--group
        %a.chat--group__link
          %p.chat--group__name
            = @group.name
          %p.chat--group__message
            test
      %li.chat__side--group
        %a.chat--group__link
          %p.chat--group__name
            = @group.name
          %p.chat--group__message
            test
  .chat__main
    .chat__main--header
      .chat__main--header__left
        %h2
          = @group.name
        %p
          - @group.users.each do |user|
            = user.name
      .chat__main--header__right
        =link_to 'Edit', edit_group_path(@group)
    .chat__main--body
      = render :partial => "message", :collection => @messages
    .chat__main--footer
      .chat__main--footer--block
        = form_for ([@group,@message]) do |f|
          = f.text_field :body, placeholder: "type a text", class: "chat__main--footer--block__left"
          = button_tag type: 'submit', class: "chat__main--footer--image" do
            %i.fa.fa-image
          = f.submit "Send", class: "chat__main--footer--block__right"
